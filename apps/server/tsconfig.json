{
  "exclude": ["dist"],
  "extends": "tsconfig/tsconfig.server.json",
  "compilerOptions": {
    "paths": {
      "@config/*": ["src/config/*"],
      "@graphql/*": ["src/modules/graphql/*"],
      "@services/*": ["src/modules/services/*"],
      "@apollo_service/*": ["src/modules/apollo/*"],
      "@utils/*": ["src/utils/*"],
      "@middleware/*": ["src/modules/middleware/*"],
      "types/*": ["src/types/*"]
    },
    "baseUrl": "./",
    "outDir": "dist" /* Redirect output structure to the directory. */,
    "rootDir": "src" /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */
  }
}
